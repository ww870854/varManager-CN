<Window x:Class="MMDLoader.WindowSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMDLoader"
        xmlns:userctls="clr-namespace:MMDLoader.UserCtls"
        mc:Ignorable="d"
        Title="设置" Height="400" Width="800" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="387*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="VAM 路径:" HorizontalAlignment="Left" Margin="19,23,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBoxVAMPath" HorizontalAlignment="Left" Margin="69,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="593" Height="22" Grid.Column="1"/>
        <Button x:Name="buttonVAMPath" Content=".." HorizontalAlignment="Left" Margin="663,27,0,0" VerticalAlignment="Top" Width="27" RenderTransformOrigin="0.052,-0.324" Height="22" Click="buttonVAMPath_Click" Grid.Column="1"/>
        <Button x:Name="buttonOK" Content="好的" HorizontalAlignment="Right" Margin="0,0,112,10" VerticalAlignment="Bottom" Width="79" IsDefault="True" Click="buttonOK_Click" Grid.Column="1"/>
        <Button x:Name="buttonOKCancle" Content="取消" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="78" IsCancel="True" Click="buttonOKCancle_Click" Grid.Column="1"/>

    </Grid>
</Window>
